{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/auth-client/*": ["../../packages/auth-client/src/*"],
      "@repo/player-api": ["../../packages/player-api/src/index.ts"],
      "@repo/player-api/*": ["../../packages/player-api/src/*"],
      "@repo/trainer-api": ["../../packages/trainer-api/dist/index.js"],
      "@repo/geo-eg": ["../../packages/geo-eg/dist/index.js"]
    },
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.tsx", "src/**/*.test.ts", "src/**/__tests__/**/*"]
}
